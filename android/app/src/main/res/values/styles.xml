<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Cor da barra de status (branca) -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <!-- Desativa transparência da barra de status -->
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Desativa transparência da barra de navegação -->
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Desativa modo de tela cheia -->
        <item name="android:windowFullscreen">false</item>
        <!-- Garante que o layout respeite as janelas do sistema -->
        <item name="android:fitsSystemWindows">true</item>
        <!-- Cor de fundo da janela -->
        <item name="android:windowBackground">#FFFFFF</item>
        <!-- Permite gerenciar a cor da barra de status -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
    </style>
</resources>